@model IEnumerable<CarRepairReport.Models.ViewModels.ServiceVms.VehicleServiceCommentVm>

@if (Model.Any())
{
    foreach (var comment in Model)
    {
        <div class="row vehicle-service-comment site-color">
            <div class="col-sm-12">
                <div class="row vs-comment-info">
                    <div class="col col-sm-6">@*@Html.DisplayNameFor(x => x.Author)*@ <h4>@comment.Author</h4></div>
                    <div class="col col-sm-3 text-muted">@comment.Date</div>
                    <div class="col col-sm-3 text-muted">@Html.DisplayNameFor(x => x.IsPositive) @(comment.IsPositive ? "Positive" : "Negative")</div>
                </div>
                <div class="row vs-comment-comment">
                    <div class="col col-sm-12">@comment.Comment</div>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="row">
        <div class="col-sm-11">
            There are still no votes/comments.
        </div>
    </div>
}
